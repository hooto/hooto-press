#!/bin/bash

files=`find src -type f -name "*.go" |xargs`
for file in $files; do
    gofmt -w=true ${file}
done

files=`find modules -type f -name "*.go" |xargs`
for file in $files; do
    gofmt -w=true ${file}
done

rm -f ./bin/lesscms

go build -ldflags "-w -s" -o ./bin/lesscms ./src/main.go

./bin/lesscms -logtostderr=true 

